---
import { Image } from 'astro:assets';

export interface Props {
  classes?: string;
  variant: string;
}
let{ 
  classes = "",
  variant = "1"
} = Astro.props;

import divider1 from '../../assets/ui/dividers/divider-1.svg';
import divider2 from '../../assets/ui/dividers/divider-2.svg';
import divider3 from '../../assets/ui/dividers/divider-3.svg';
import divider4 from '../../assets/ui/dividers/divider-4.svg';
import divider5 from '../../assets/ui/dividers/divider-5.svg';
import divider6 from '../../assets/ui/dividers/divider-6.svg';
import divider7 from '../../assets/ui/dividers/divider-7.svg';
import divider8 from '../../assets/ui/dividers/divider-8.svg';
import divider9 from '../../assets/ui/dividers/divider-9.svg';
import divider10 from '../../assets/ui/dividers/divider-10.svg';

const dividerImages: Record<string, ImageMetadata> = {
  "1": divider1,
  "2": divider2,
  "3": divider3,
  "4": divider4,
  "5": divider5,
  "6": divider6,
  "7": divider7,
  "8": divider8,
  "9": divider9,
  "10": divider10,
};
---

{ dividerImages[variant] && <Image src={dividerImages[variant]} class={`divider img-fluid ${classes}`} alt="divider" /> }

<style>
  .divider {
    display: block;
    margin: 1rem 0;
  }
</style>