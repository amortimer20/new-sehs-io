---
import BinHexCounter from "../../components/interactives/BinHexCounter.svelte";
import BitToggler from "../../components/interactives/BitToggler.svelte";
import Divider from "../../components/ui/Divider.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout>
  <div class="container mt-4">
    <a href="/ap-csp/" class="btn btn-sm btn-outline-light">
      <i class="si-arrow-left"></i> Back
    </a>
    <h2 class="text-center mt-5 text-skynest-theme">
      Activity 1.13 Counting Numbers
    </h2>
    <Divider variant="3" classes="my-4" />
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-6">
        <h3>Decimal - Binary - Hex</h3>
        <BinHexCounter client:visible />
      </div>
    </div>
    <Divider variant="8" classes="my-5" />
    <div class="row justify-content-center mb-5">
      <div class="col-sm-12 col-md-6">
        <h3>Bit Toggling</h3>
        <BitToggler client:visible />
      </div>
    </div>
  </div>
</Layout>
