---
import Presentation from "../../components/Presentation.astro";
import Divider from "../../components/ui/Divider.astro";
import Layout from "../../layouts/Layout.astro";
import { Code } from "astro-expressive-code/components";

let figure1 = `
public class Main {
    public static void main(String[] args) {

    }
}`;
---

<Layout>
  <div class="container my-4">
    <div class="row justify-content-center">
      <div class="col-sm-12 col-md-10">
        <a href="/java-programming/" class="btn btn-sm btn-outline-light mb-3">
          <i class="si-arrow-left"></i> Back
        </a>

        <h1>Activity 1.0 Introduction to Computer Science with Java</h1>
        <Divider variant="8" classes="mb-4" />

        <Presentation>
          <section>
            <h3>Activity 1.0</h3>
            <h4 class="text-skynest-theme">
              Introduction to Computer Science with Java
            </h4>
          </section>
          <section>
            <h4>Topics</h4>
            <ul>
              <li>Computer Science</li>
              <li>Programming</li>
              <li>The Java Programming Language</li>
              <li>Entrypoint of a Java Program</li>
            </ul>
          </section>
          <section data-auto-animate>
            <h4>Entrypoint of a Java Program</h4>
            <p>
              Java programs begin execution within the <span
                class="text-skynest-cyan">main method</span
              >.
            </p>
            <div class="text-start">
              <Code
                lang="java"
                frame="code"
                title="Main.java"
                showLineNumbers={true}
                code={figure1}
              />
            </div>
          </section>
        </Presentation>
      </div>
    </div>
  </div>
</Layout>
